set nocompatible
set nu

syntax on

colorscheme default
" Use spaces instead of tabs
set expandtab

" Be smart when using tabs ;)
set smarttab

" 1 tab == 4 spaces
set shiftwidth=4
set tabstop=4

set ai "Auto indent
set si "Smart indent
set wrap "Wrap lines

" Ignore case when searching
set ignorecase

" When searching try to be smart about cases 
set smartcase
